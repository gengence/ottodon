{
	"name": "Ottodon Dev Container",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		}
	},

	   "updateContentCommand": "./.devcontainer/update-content.sh",

	   "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libreoffice",

	   "forwardPorts": [3000],

	   "containerEnv": {
		   "LIBREOFFICE_PATH": "/usr/bin/soffice"
	   },

       "customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"waderyan.gitblame"
			]
		}
	}
} 