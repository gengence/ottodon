{
	"name": "Ottodon Dev Container",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		}
	},

	"updateContentCommand": "sudo chown -R vscode:vscode /workspaces/${localWorkspaceFolderBasename}/web/node_modules /home/vscode/.pnpm-store",

	"mounts": [
		"source=ottodon-web-node-modules,target=/workspaces/${localWorkspaceFolderBasename}/web/node_modules,type=volume",
		"source=ottodon-pnpm-store,target=/home/vscode/.pnpm-store,type=volume"
	],

	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/web",
	"remoteUser": "vscode",

	"postCreateCommand": "bash -c 'cd /workspaces/${localWorkspaceFolderBasename}/web && pnpm install --store-dir /home/vscode/.pnpm-store'",

	"forwardPorts": [3000],

	"containerEnv": {
		"LIBREOFFICE_PATH": "/usr/bin/soffice"
	},

	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"waderyan.gitblame"
			]
		}
	}
} 