{
	"name": "Ottodon",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		}
	},

	"remoteUser": "vscode",

	"postCreateCommand": "cd web && pnpm install --store-dir /home/vscode/.pnpm-store",

	"forwardPorts": [3000],

	"containerEnv": {
		"LIBREOFFICE_PATH": "/usr/bin/soffice"
	},

	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"waderyan.gitblame"
			]
		}
	}
}