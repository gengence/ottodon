{
	"name": "Ottodon",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts",
			"installPnpm": "true"
		}
	},

	"remoteUser": "vscode",

	"mounts": [
		"source=${localWorkspaceFolderBasename}-node_modules,target=/workspaces/${localWorkspaceFolderBasename}/web/node_modules,type=volume",
		"source=pnpm-store,target=/home/vscode/.pnpm-store,type=volume"
	],

	"postCreateCommand": "pnpm config set store-dir /home/vscode/.pnpm-store && cd web && pnpm install",

	"forwardPorts": [3000],

	"containerEnv": {
		"LIBREOFFICE_PATH": "/usr/bin/soffice"
	},

	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"waderyan.gitblame"
			]
		}
	}
}